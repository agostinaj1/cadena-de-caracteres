#include <stdio.h>
#include <string.h>

int main() {
    char frase[200];
    int contador = 0;

    printf("Ingrese una frase: ");
    fgets(frase, sizeof(frase), stdin);

    // Recorrer cada car√°cter y contar vocales
    for (int i = 0; frase[i] != '\0'; i++) {
        if (frase[i] == 'a' || frase[i] == 'A' ||
            frase[i] == 'e' || frase[i] == 'E' ||
            frase[i] == 'i' || frase[i] == 'I' ||
            frase[i] == 'o' || frase[i] == 'O' ||
            frase[i] == 'u' || frase[i] == 'U') {
            contador++;
        }
    }

    printf("La frase tiene %d vocales.\n", contador);

    return 0;
}
